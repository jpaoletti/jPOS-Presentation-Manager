<?xml version='1.0' ?>
<!DOCTYPE entity SYSTEM "cfg/entity.dtd">  
<entity>
    <id>secuserprofile</id>
      <clazz>org.jpos.ee.pm.security.SECUser</clazz>
      <auditable>true</auditable>
      <dataAccess class="org.jpos.ee.pm.security.ui.DataAccessUser" />
      
      <operations>
          <operation>
              <id>show</id>
              <enabled>true</enabled>
              <scope>item</scope>
              <display>edit changepassword</display>
          </operation>
          <operation>
              <id>edit</id>
              <enabled>true</enabled>
              <scope>item</scope>
              <display>show</display>
          </operation>
          <operation>
              <id>changepassword</id>
              <enabled>true</enabled>
              <scope>item</scope>
              <display>edit show</display>
          </operation>
      </operations>

      <field>
          <id>username</id>
          <width>100</width>
          <display>all</display>
      </field>
      <field>
          <id>name</id>
          <display>all</display>
          <converters>
              <converter class="org.jpos.ee.pm.struts.converter.EditStringConverter" operations="edit"/>
          </converters>
      </field>
    <field>
        <id>password</id>
        <display></display>
        <converters>
              <converter class="org.jpos.ee.pm.struts.converter.EditPasswordConverter" operations="edit"/>
          </converters>
    </field>
      <field>
          <id>email</id>
          <display>all</display>
          <converters>
              <converter class="org.jpos.ee.pm.struts.converter.EditStringConverter" operations="edit"/>
          </converters>
      </field>
</entity>